@page
@model IndexModel
@{
    ViewData["Title"] = "Start";
}

<div class = "wrapper">
    <div class = "site-header">
        <h1 class="site-name">
            <strong>League of Statistics</strong>
        </h1>
    </div>

    <form class = "input-form" method = "POST">
        <div class = "input-group mb-3">
            <div class = "input-group-prepend">
                <div class = "dropdown">
                    <button type = "button" class = "btn btn-primary dropdown-toggle" id = "dropdownMenuButton" data-toggle = "dropdown" aria-haspopup = "true" aria-expanded = "false">NA</button>
                    
                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
                    <script type = "text/javascript">
                        $(function () {
                            $(".dropdown-menu").on('click', 'a', function () {
                                $("#dropdownMenuButton").text($(this).attr('id'));
                                document.getElementById("region").value = $(this).attr('id');
                            });
                        });
                    </script>

                    <div class = "dropdown-menu" id = "dropdown-menu" aria-labelledby = "dropdownMenuButton">
                        <a class = "dropdown-item" id = "NA">North America (NA)</a>
                        <a class = "dropdown-item" id = "EUW">Europe - West (EUW)</a>
                        <a class = "dropdown-item" id = "EUNE">Europe - Nordic & East (EUNE)</a>
                        <a class = "dropdown-item" id = "KR">Korea (KR)</a>
                        <a class = "dropdown-item" id = "BR">Brazil (BR)</a>
                        <a class = "dropdown-item" id = "JP">Japan (JP)</a>
                        <a class = "dropdown-item" id = "RU">Russia (RU)</a>
                        <a class = "dropdown-item" id = "OCE">Oceania (OCE)</a>
                        <a class = "dropdown-item" id = "TR">Turkey (TR)</a>
                        <a class = "dropdown-item" id = "LAN">Latin America - North (LAN)</a>
                        <a class = "dropdown-item" id = "LAS">Latin America - South (LAS)</a>
                    </div>
                </div>
            </div>
            <input type = "hidden" id = "region" name = "region" value = ""/>
            <input type = "text" class = "form-control" name = "Username" value = "" placeholder = "Username" aria-label = "Username" aria-describedby = "dropdownMenuButton" />
            <span class = "input-group-append">
                <button type = "submit" class = "btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border-top-0 border ms-n5">
                    <i class = "bi bi-search"></i>
                </button>
            </span>
        </div>
    </form>

    <div class = "alert alert-danger alert-dismissible fade show" role = "alert">
        <svg xmlns = "http://www.w3.org/2000/svg" width = "24" height = "24" fill = "currentColor" class = "bi bi-exclamation-triangle-fill" viewBox = "0 0 16 16">
            <path d = "M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        @Model.ErrorMessage
        <button type = "button" class = "btn-close" data-bs-dismiss = "alert" aria-label = "Close"></button>
    </div>
</div>