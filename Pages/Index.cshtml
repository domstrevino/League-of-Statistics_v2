@page
@model IndexModel
@{
    ViewData["Title"] = "Start page";
}
<div class = "site-header">
    <h1 class="site-name"><strong>League of Statistics</strong></h1>
</div>

<form method = "POST">
    <div class = "input-group mb-3">
        <div class = "input-group-prepend">
            <div class = "dropdown">
                <button type = "button" class = "btn btn-primary dropdown-toggle" id = "dropdownMenuButton" data-toggle = "dropdown" aria-haspopup = "true" aria-expanded = "false">
                    Region
                </button>
                <div class = "dropdown-menu" aria-labelledby = "dropdownMenuButton">
                    <a class = "dropdown-item" href = "#">North America (NA)</a>
                    <a class = "dropdown-item" href = "#">Europe - West (EUW)</a>
                    <a class = "dropdown-item" href = "#">Europe - Nordic & East (EUNE)</a>
                    <a class = "dropdown-item" href = "#">Korea (KR)</a>
                    <a class = "dropdown-item" href = "#">Brazil (BR)</a>
                    <a class = "dropdown-item" href = "#">Japan (JP)</a>
                    <a class = "dropdown-item" href = "#">Russia (RU)</a>
                    <a class = "dropdown-item" href = "#">Oceania (OCE)</a>
                    <a class = "dropdown-item" href = "#">Turkey (TR)</a>
                    <a class = "dropdown-item" href = "#">Latin America - North (LAN)</a>
                    <a class = "dropdown-item" href = "#">Latin America - South (LAS)</a>
                </div>
            </div>
        </div>
        <input type = "text" class = "form-control" placeholder = "Username" aria-label = "Username" aria-describedby = "dropdownMenuButton" />
        <span class = "input-group-append">
            <button type = "submit" class = "btn btn-outline-secondary bg-white border-start-0 border-bottom-0 border ms-n5">
                <i class = "bi bi-search"></i>
            </button>
        </span>
    </div>
</form>

